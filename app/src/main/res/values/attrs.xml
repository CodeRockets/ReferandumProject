<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="MyCircleView">
        <attr name="shape" format="enum">
            <enum name="circle" value="0" />
        </attr>
        <!-- CircleView sınıfında bahsedilen, R.styleable.CircleView_dim asagıdaki  name="dim" den karsılık gelmektedir  -->
        <attr name="dim" format="dimension" />
        <attr name="shape_color" format="color" />
    </declare-styleable>


    <declare-styleable name="CustomAnswerPercent">
        <attr name="barAWidth" format="integer" />
        <attr name="barBWidth" format="integer" />
        <attr name="barAValue" format="integer" />
        <attr name="barBValue" format="integer" />
        <attr name="barSValue" format="integer" />
        <attr name="barAColor" format="color" />
        <attr name="barBColor" format="color" />
        <attr name="animBarDuration" format="float" />
        <attr name="animAlphaViewDuration" format="float" />
        <attr name="alphaViewValue" format="float" />
    </declare-styleable>

    <declare-styleable name="AvatarImageBehavior">
        <attr name="finalYPosition" format="dimension" />
        <attr name="startXPosition" format="dimension" />
        <attr name="startToolbarPosition" format="dimension" />
        <attr name="startHeight" format="dimension" />
        <attr name="finalHeight" format="dimension" />
    </declare-styleable>

</resources>